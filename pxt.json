{
    "name": "ShiftRegisterControl",
    "description": "Extension to control 74HC595 shift register with Microbit",
    "files": [
        "main.py"
    ],
    "dependencies": {},
    "color": "#00008B",
    "icon": "icon-shuffle",
    "blocks": [
        {
            "name": "initialize shift register with latch %latch|clock %clock|data %data",
            "callback": "shift_register_init",
            "color": "#00008B",
            "icon": "icon-cogs",
            "parameters": [
                {
                    "name": "latch",
                    "type": "number"
                },
                {
                    "name": "clock",
                    "type": "number"
                },
                {
                    "name": "data",
                    "type": "number"
                }
            ]
        },
        {
            "name": "set relays %state",
            "callback": "shift_register_set_relays",
            "color": "#00008B",
            "icon": "icon-power-off",
            "parameters": [
                {
                    "name": "state",
                    "type": "number"
                }
            ]
        },
        {
            "name": "set relays from binary %binary",
            "callback": "shift_register_set_relays_from_binary",
            "color": "#00008B",
            "parameters": [
                {
                    "name": "binary",
                    "type": "string"
                }
            ],
            "icon": "icon-binary"
        }
    ]
}
