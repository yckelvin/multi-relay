{
    "name": "ShiftRegisterControl",
    "description": "Extension to control 74HC595 shift register with Microbit",
    "files": [
        "main.py",
        "main.ts"
    ],
    "dependencies": {},
    "color": "#00008B",
    "icon": "icon-shuffle",
    "blocks": [
        {
            "name": "initialize shift register with latch %latch|clock %clock|data %data",
            "callback": "shiftregister.init",
            "color": "#00008B",
            "icon": "icon-cogs",
            "parameters": [
                {
                    "name": "latch",
                    "type": "pin"
                },
                {
                    "name": "clock",
                    "type": "pin"
                },
                {
                    "name": "data",
                    "type": "pin"
                }
            ]
        },
        {
            "name": "set relays %state",
            "callback": "shiftregister.setRelays",
            "color": "#00008B",
            "icon": "icon-power-off",
            "parameters": [
                {
                    "name": "state",
                    "type": "number"
                }
            ]
        },
        {
            "name": "set relays from binary inputs b1 %b1 b2 %b2 b3 %b3 b4 %b4 b5 %b5",
            "callback": "shiftregister.setRelaysFromBinaryInputs",
            "color": "#00008B",
            "parameters": [
                {
                    "name": "b1",
                    "type": "number"
                },
                {
                    "name": "b2",
                    "type": "number"
                },
                {
                    "name": "b3",
                    "type": "number"
                },
                {
                    "name": "b4",
                    "type": "number"
                },
                {
                    "name": "b5",
                    "type": "number"
                }
            ],
            "icon": "icon-binary"
        }
    ]
}
