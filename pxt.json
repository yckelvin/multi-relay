{
    "name": "ShiftRegisterControl",
    "description": "Extension to control 74HC595 shift register with Microbit",
    "files": [
        "main.py",
        "main.ts"
    ],
    "dependencies": {},
    "color": "#00008B",
    "icon": "icon-shuffle",
    "blocks": [
        {
            "name": "initialize shift register with latch %latch|clock %clock|data %data",
            "callback": "shiftregister.init",
            "color": "#00008B",
            "icon": "icon-cogs",
            "parameters": [
                {
                    "name": "latch",
                    "type": "pin"
                },
                {
                    "name": "clock",
                    "type": "pin"
                },
                {
                    "name": "data",
                    "type": "pin"
                }
            ]
        },
        {
            "name": "set relays %state",
            "callback": "shiftregister.setRelays",
            "color": "#00008B",
            "icon": "icon-power-off",
            "parameters": [
                {
                    "name": "state",
                    "type": "number"
                }
            ]
        },
        {
            "name": "set relays from binary %binary",
            "callback": "shiftregister.setRelaysFromBinary",
            "color": "#00008B",
            "parameters": [
                {
                    "name": "binary",
                    "type": "string"
                }
            ],
            "icon": "icon-binary"
        }
    ]
}
